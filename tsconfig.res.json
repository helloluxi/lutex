{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2020",
    "outDir": "res/dist",
    "rootDir": "src/ts",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": [
    "src/ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
