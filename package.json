{
  "name": "lutex-ext",
  "displayName": "LuTeX",
  "description": "Jump to specific line numbers in LuTeX files based on network messages",
  "version": "0.0.1",
  "publisher": "xlu",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lutex-ext.inlineToDisplay",
        "title": "Inline to display",
        "category": "LuTeX"
      },
      {
        "command": "lutex-ext.bibtexClean",
        "title": "BibTeX Clean",
        "category": "LuTeX"
      },
      {
        "command": "lutex-ext.texNormalization",
        "title": "Tex Normalization",
        "category": "LuTeX"
      },
      {
        "command": "lutex-ext.launchLutexWithListener",
        "title": "Launch LuTeX Renderer with Listener",
        "category": "LuTeX"
      },
      {
        "command": "lutex-ext.launchMarkdownWithListener",
        "title": "Launch Markdown Renderer with Listener",
        "category": "LuTeX"
      },
      {
        "command": "lutex-ext.launchSlidesWithListener",
        "title": "Launch Slides Renderer with Listener",
        "category": "LuTeX"
      },
      {
        "command": "lutex-ext.launchListener",
        "title": "Launch Listener Only",
        "category": "LuTeX"
      },
      {
        "command": "lutex-ext.closeAll",
        "title": "Close All",
        "category": "LuTeX"
      },
      {
        "command": "lutex-ext.jumpToHtml",
        "title": "Jump to HTML Element",
        "category": "LuTeX"
      },
      {
        "command": "lutex-ext.exportSlidesToPdf",
        "title": "Export Slides to PDF",
        "category": "LuTeX",
        "enablement": "lutexSlidesRendererActive"
      }
    ],
    "configuration": {
      "title": "LuTeX",
      "properties": {
        "lutex-ext.rendererPort": {
          "type": "number",
          "default": 0,
          "description": "Port number for the LuTeX renderer server (0 = auto-detect)",
          "minimum": 0,
          "maximum": 65535
        },
        "lutex-ext.listenerPort": {
          "type": "number",
          "default": 0,
          "description": "Port number for the line jumping listener server (0 = auto-detect)",
          "minimum": 0,
          "maximum": 65535
        },
        "lutex-ext.theme": {
          "type": "string",
          "enum": ["light", "dark"],
          "default": "dark",
          "description": "Default theme for the LuTeX renderer"
        },
        "lutex-ext.katexMacros": {
          "type": "object",
          "default": {
            "\\ket": "\\lvert #1 \\rangle",
            "\\bra": "\\langle #1 \\rvert",
            "\\ip": "\\langle #1 | #2 \\rangle",
            "\\dyad": "\\ket{#1} \\bra{#2}"
          },
          "description": "Custom KaTeX macros for math rendering. Define your own LaTeX shortcuts.",
          "additionalProperties": {
            "type": "string"
          }
        },
        "lutex-ext.chromePath": {
          "type": "string",
          "default": "",
          "description": "Path to Chrome/Chromium executable for PDF generation. Leave empty to auto-detect. Example: C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe",
          "scope": "machine"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/helloluxi/lutex-ext"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:res",
    "compile:extension": "tsc -p ./tsconfig.json",
    "compile:res": "tsc -p ./tsconfig.res.json",
    "watch": "npm run watch:extension & npm run watch:res",
    "watch:extension": "tsc -watch -p ./tsconfig.json",
    "watch:res": "tsc -watch -p ./tsconfig.res.json",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "clean": "rimraf out res/dist"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.13.0",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "pdf-lib": "^1.17.1",
    "puppeteer": "^24.11.2"
  }
}
